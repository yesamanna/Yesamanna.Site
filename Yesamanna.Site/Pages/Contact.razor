@page "/contact"
<PageTitle>Contact — Yesamanna</PageTitle>
<HeadContent>
    <meta name="description" content="Contact Yesamanna for product questions, support, and partnerships." />
</HeadContent>

<h1>Contact</h1>
<p>Questions, feedback, or partnerships? Reach out — we’d love to talk.</p>

<form class="contact-form" onsubmit="return false">
    <div class="row">
        <label>Name</label>
        <input required />
    </div>
    <div class="row">
        <label>Email</label>
        <input type="email" required />
    </div>
    <div class="row">
        <label>Message</label>
        <textarea rows="5" required></textarea>
    </div>
    <button class="btn primary" type="submit">Send</button>
</form>

<p class="alt-contact">Prefer email? <a href="mailto:hello@yesamanna.com">hello@yesamanna.com</a></p>
